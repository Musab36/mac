<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salajim.musab.musabacademy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dollar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.AddSignalsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.SignalsActivity" />
        </activity>
        <activity
            android:name=".ui.SignalsAdminActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.SignalsActivity" />
        </activity>
        <activity
            android:name=".ui.SignalsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.MainActivity" />
        </activity>
        <activity
            android:name=".advanceLessons.AdvanceDetail"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_advance_detail"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.AdvanceActivity" />
        </activity>
        <activity
            android:name=".ui.AdvanceActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.LessonsActivity" />
        </activity>
        <activity
            android:name=".basicLessons.BasicDetail"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_basic_detail"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.BasicsActivity" />
        </activity>
        <activity
            android:name=".interm.IntermDetail"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_interm_detail"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.IntermediateActivity" />
        </activity>
        <activity
            android:name=".ui.IntermediateActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.LessonsActivity" />
        </activity>
        <activity
            android:name=".ui.BasicsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.LessonsActivity" />
        </activity>
        <activity
            android:name=".ui.LessonsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.musabacademy.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>